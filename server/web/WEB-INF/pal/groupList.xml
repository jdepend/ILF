<?xml version="1.0" encoding="UTF-8" ?>
<qeweb:page>
    <qeweb:navbar text="组列表页面"/>
    <qeweb:title bind="queryInfoBO">
        <qeweb:icon bind="icon"/>
        <qeweb:label bind="info"/>
    </qeweb:title>
    <qeweb:grouplist bind="deptBO">
        <qeweb:group_title layout="1:2">
            <qeweb:label id="name" bind="name"/>
            <qeweb:label id="userCount" bind="userCount"/>
        </qeweb:group_title>
        <qeweb:list>
            <qeweb:list_element bind="userBO" queryRange="true" layout="3:4:4:1">
                <qeweb:hidden id="id" bind="id"/>
                <qeweb:image id="avatar" bind="avatar"/>
                <qeweb:block layout="2:1">
                    <qeweb:label id="name" bind="name"/>
                    <qeweb:block layout="1:2">
                        <qeweb:label id="sex" bind="sex"/>
                        <qeweb:label id="duty" bind="duty"/>
                    </qeweb:block>
                </qeweb:block>
                <qeweb:label text="纪实查看"/>
                <qeweb:icon text="glyphicon-menu-right"/>
            </qeweb:list_element>
        </qeweb:list>
    </qeweb:grouplist>
</qeweb:page>

